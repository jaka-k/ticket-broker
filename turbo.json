{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "packages/server/go.mod", "packages/server/go.sum"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".svelte-kit/**", "./server/bin/**"],
      "env": [ "TURBO_FILTER=!@ticket-broker/core"]
    },
    "server:build": {
      "cache": false,
      "outputs": ["./server/bin/**"]
    },
    "server:test": {
      "dependsOn": ["server:build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV=development"]
      }
    }
  }

