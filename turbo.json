{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "server/go.mod", "server/go.sum"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".svelte-kit/**", "server/bin/**"],
      "env": ["TURBO_FILTER=!@ticket-broker/core"]
    },
    "server:build": {
      "cache": false,
      "outputs": ["server/bin/**"]
    },
    "server:dev": {
      "persistent": true,
      "cache": false,
      "outputs": []
    },
    "server:test": {
      "dependsOn": ["server:build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["server:dev", "^dev"],
      "persistent": true,
      "cache": false,
      "env": ["NODE_ENV=development"]
    }
  }
}
